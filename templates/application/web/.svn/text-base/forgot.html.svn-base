
<div class="page_section" id="theformpage">
	<div id="metapage">
        <div class="wrapper">
            <h1 class="page-title fl">Forgot Password</h1>
            <div class="breadcumb fr">
                <a href="{$basedomain}home">Home</a> <span>/</span> <a>Forgot Password</a>
            </div>
        </div><!-- end .wrapper -->   
    </div><!-- end #metapage -->
    <div id="theform" class="section "> 
        <div class="wrapper">
        	<div class="col">
            <form class="theformsforgot"  id="loginForm" name="Form2" method="POST" action="">
                <div class="rows">
                  <img src="{$basedomain}assets/images/logo_creasi.png" />
                  <h4>Website-nya orang kreatif mencari kerja</h4>
				 
                </div><!-- end .rows --> 
                <div class="rows overflowHid">
                    <a class="button2"><span>FORGOT PASSWORD</span></a>
                </div>
				<div class="rows">
					  <label style='color:red'>{$msg} </label>
				</div>
                <div class="greybox">    
                    <div class="rows">
                   <input name="email" placeholder="Enter your email address (username)" autocomplete="off"  type="text" id="email"> 
                    <input name="submit" type="hidden"  value="1"> 
                    </div><!-- end .rows -->       
                    <div class="rows">
                        <input type="submit" class="button1 fr submit submitforgot" value="SUBMIT" />
                    </div><!-- end .rows -->  
                </div>  <!-- end .greybox -->
            </form>
            </div><!-- end .col -->   
        </div><!-- end .wrapper -->    
    </div><!-- end #theform --> 
</div><!-- end #theformpage -->
<script>
{literal}
	var klik=0;
	$('.submitforgot').click(function()
		{
			if(klik==0)
			{
				$('.theformsforgot').trigger('submit');
				//$(this).attr('disabled','disabled');
				klik=1;
			}
		});

{/literal}
</script>

