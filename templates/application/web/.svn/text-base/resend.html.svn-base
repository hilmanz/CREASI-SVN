
<div class="page_section" id="theformpage">
	<div id="metapage">
        <div class="wrapper">
            <h1 class="page-title fl">Resend Verification Email</h1>
            <div class="breadcumb fr">
                <a href="{$basedomain}home">Home</a> <span>/</span> <a>Resend Verification Email</a>
            </div>
        </div><!-- end .wrapper -->   
    </div><!-- end #metapage -->
    <div id="theform" class="section"> 
        <div class="wrapper">
        	<div class="col">
            <form class="theformsresend" id="loginForm" name="Form2" method="POST" action="">
                <div class="rows">
                  <img src="{$basedomain}assets/images/logo_creasi.png" />
                  <h4>Website-nya orang kreatif mencari kerja</h4>
                </div><!-- end .rows -->
                <div class="rows overflowHid">
                    <a class="button2"><span>RESEND VERIFICATION EMAIL</span></a>
                </div>    
                <div class="rows">
					<label style="color:red">{$msg}</label>
                </div><!-- end .rows -->
                <div class="greybox">    
                    <div class="rows">
                      <input name="email" placeholder="Enter your email address" autocomplete="off"  type="text" id="email" maxlength="55"> 
                    
                    </div><!-- end .rows -->       
                    <div class="rows">
					<input type="hidden" name="submit" value="1">
                        <input type="submit" class="button1 fr submitresend" value="SUBMIT" />
						  
                    </div><!-- end .rows -->  
                </div>  <!-- end .greybox -->
            </form>
            </div><!-- end .col -->   
        </div><!-- end .wrapper -->    
    </div><!-- end #theform --> 
</div><!-- end #theformpage -->
<script>
{literal}
var klik=0;
	$('.submitresend').click(function()
		{
			if(klik==0)
			{
				$('.theformsresend').trigger('submit');
				//$(this).attr('disabled','disabled');
				klik=1;
			}
		});
{/literal}
</script>
