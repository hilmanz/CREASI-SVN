<div class="page_section" id="project-page">
    <div id="container">
        <div class="titleboxs">
            <h2 class="fl"><span class="icon-newspaper">&nbsp;</span> Js</h2>
            <h2 class="fr"><a href="{$basedomain}news" class="button2">Back</a></h2>
   
        </div><!-- end .titleboxs -->
        <div class="content">
            <div class="summary"> 
                <p></p>
            </div><!-- end .summary -->

            <form id="forms" class="forms" method="post" action="">
            <div id="new-project" class="boxcontent">
			{if $load}
			{section name=i loop=$load} 
              <h3>{$load[i].job_title}</h3>
			   {$load[i].date}<br>
			  {$load[i].job_description} 
			  {$load[i].requitment}
			  {if $iduser}
				<input  type="hidden" class="jobid"  name="jobid" value="{$load[i].id_job}">
				<input type="button" class="submitcv" value="send">
			  {/if}
            <hr>
			{/section}
			{/if}
			
			</div><!-- end #wizard -->
            </form>
        </div><!-- end .content -->
    </div><!-- end #container -->
</div><!-- end #home -->
